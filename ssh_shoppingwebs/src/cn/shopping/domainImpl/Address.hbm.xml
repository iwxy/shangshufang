<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
	<hibernate-mapping>
	<!-- 
		1.配置类和表对应
			class标签
			name属性：实体类全路径
			table属性：数据库表名称
	 -->
	 <class name="cn.shopping.domainImpl.AddressImpl" table="address">
	 	<!-- 
	 		2.配置实体类id和表id对应，hibernate要求实体类有一个属性唯一值
	 		hibernate要求表有字段作为唯一值
	 	 -->
	 	 <!-- 
	 	 	id标签
	 	 		name属性：实体类里面id的名称，column属性：生成的表的字段名
	 	  -->
	 	  <id name="ad_id" column="ad_id">
	 	  	<!-- 设置数据库表id的增长策略（主键自增长） -->
	 	  	<generator class="native"></generator>
	 	  </id>
	 	  <!-- 如果不写column，那么生成的表的字段名与name的值一样 -->
	 	  <!-- 配置其他属性和表字段对应
	 	  		name属性：实体类属性名称，column属性：生成表字段名称
	 	   -->
	 	   <property name="ad_name" column="ad_name"></property>
	 	   <property name="ad_province" column="ad_province"></property>
	 	   <property name="ad_city" column="ad_city"></property>
	 	   <property name="ad_county" column="ad_county"></property>
	 	   <property name="ad_address" column="ad_address"></property>
	 	   <property name="ad_phone" column="ad_phone"></property>
	 </class>
</hibernate-mapping>